from tkinter import *
from random import choice, randint

root = Tk()
root.title("Генератор паролей")
root.geometry("400x350")

letters = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
numbers = "0123456789"
symbols = "@!#$%^&*()№`/[]?,><-+="
space = " "

def simple_shuffle(lst):
    n = len(lst)
    for i in range(n):
        j = randint(0, n - 1)
        lst[i], lst[j] = lst[j], lst[i]

def generate_password():
    length = int(spinbox.get())
    use_letters = letters_var.get()
    use_numbers = numbers_var.get()
    use_symbols = symbols_var.get()
    use_space = space_var.get()

    if not (use_letters or use_numbers or use_symbols or use_space):
        textbox.delete(0, END)
        textbox.insert(0, "Выберите хотя бы один тип символов")
        return

    password_chars = []
    if use_letters:
        password_chars.append(choice(letters))
    if use_numbers:
        password_chars.append(choice(numbers))
    if use_symbols:
        password_chars.append(choice(symbols))
    if use_space:
        password_chars.append(choice(space))

    all_chars = letters
    if use_numbers:
        all_chars += numbers
    if use_symbols:
        all_chars += symbols
    if use_space:
        all_chars += space

    while len(password_chars) < length:
        password_chars.append(choice(all_chars))

    simple_shuffle(password_chars)

    password = "".join(password_chars[:length])
    textbox.delete(0, END)
    textbox.insert(0, password)

spinbox = Spinbox(root, from_=5, to=50, width=10)
spinbox.pack(padx=140, pady=10, anchor=NW)

letters_var = IntVar(value=1)
Checkbutton(root, text="Включить буквы", variable=letters_var).pack(padx=6, pady=4, anchor=NW)

numbers_var = IntVar()
Checkbutton(root, text="Включить цифры", variable=numbers_var).pack(padx=6, pady=4, anchor=NW)

symbols_var = IntVar()
Checkbutton(root, text="Включить символы", variable=symbols_var).pack(padx=6, pady=4, anchor=NW)

space_var = IntVar()
Checkbutton(root, text="Включить пробел", variable=space_var).pack(padx=6, pady=4, anchor=NW)

textbox = Entry(root, font=("Arial", 16))
textbox.pack(pady=10)

Button(root, text="Сгенерировать пароль", command=generate_password).pack()

root.mainloop()
